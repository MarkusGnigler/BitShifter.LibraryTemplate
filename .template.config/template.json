{
    "$schema": "http://json.schemastore.org/template",
    "author": "Markus Gnigler",
    "classifications": [
        "Library",
        "TDD", 
        "Testing", 
        "XUnit", 
        "UnitTest"
    ],
    "groupIdentity": "BitShifter.LibraryTemplate",
    "identity": "BitShifter.LibraryTemplate",
    "name": "Library structure with Unit Tests and Docker support",
    "shortName": "library",
    "defaultName": "LibraryTemplate",
    "sourceName": "BitShifter.LibraryTemplate",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "preferNameDirectory": true,
    "symbols": {
        "framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "defaultValue": "net6.0",
            "replaces": "{TargetFramework}",
            "choices": [
                {
                    "choice": "net5.0"
                },
                {
                    "choice": "net6.0"
                }
            ]
        }
    },
    "sources": [
        {
            "source": "./destination",
            "target": "./",
            "rename": {
                ".gitignore": ".gitignore"
            }
        },
        {
            "source": "./destination/.github/workflows",
            "target": "./.github/workflows",
            "rename": {
                "publish.yml": "publish.yml"
            }
        },
        {
            "source": "./destination",
            "target": "./",
            "rename": {
                "Dockerfile.Pack": "Dockerfile.Pack"
            }
        },
        {
            "source": "./destination",
            "target": "./",
            "rename": {
                "test.yml": "test.yml",
                "Dockerfile.Test": "Dockerfile.Test"
            }
        },
        {
            "modifiers": [
                {
                    "exclude": [ 
                        ".vs/**", 
                        ".git/**",
                        ".github/**",
                        ".gitignore",
                        ".template.dev/**",
                        "README.md",
                        "dist/**",
                        "destination/**", 
                        "nuget.csproj", 
                        ".nuspec", 
                        "workflows",
                        "Dockerfile"
                    ]
                }
            ]
        }
    ]
}